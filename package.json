{
  "name": "mfe-toolkit",
  "version": "1.0.0",
  "description": "A comprehensive toolkit for building and managing microfrontends",
  "private": true,
  "type": "module",
  "license": "MIT",
  "author": "Maysam Tayyeb <maysam@example.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/maysam-tayyeb/mfe-toolkit.git"
  },
  "homepage": "https://github.com/maysam-tayyeb/mfe-toolkit#readme",
  "bugs": {
    "url": "https://github.com/maysam-tayyeb/mfe-toolkit/issues"
  },
  "keywords": [
    "microfrontend",
    "mfe",
    "monorepo",
    "toolkit",
    "react",
    "typescript"
  ],
  "scripts": {
    "dev:container-react": "pnpm --filter @mfe/container-react dev",
    "build": "pnpm build:packages && pnpm build:mfes",
    "build:packages": "pnpm --parallel --filter './packages/**' build",
    "build:mfes": "pnpm --parallel --filter './apps/mfe-*' --filter './apps/service-demos/**' build && pnpm copy-mfe-dists",
    "copy-mfe-dists": "node scripts/copy-mfe-dists.js",
    "serve": "pnpm dlx serve dist -p 8080 --cors",
    "test:packages": "pnpm --filter './packages/**' test",
    "test:container": "pnpm --filter @mfe/container-react test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "pnpm -r type-check",
    "validate:manifests": "tsx scripts/validate-manifests.ts",
    "build:registry": "tsx scripts/build-registry.ts",
    "prepublish:check": "tsx scripts/prepublish-check.ts",
    "publish:dry": "pnpm --filter '@mfe-toolkit/*' publish --dry-run --no-git-checks",
    "publish:alpha": "pnpm --filter '@mfe-toolkit/*' publish --tag alpha --no-git-checks",
    "publish:beta": "pnpm --filter '@mfe-toolkit/*' publish --tag beta --no-git-checks",
    "publish:latest": "pnpm --filter '@mfe-toolkit/*' publish --no-git-checks",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.8",
    "esbuild-plugin-vue3": "^0.4.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "msw": "^2.10.4",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.7.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.17.1",
    "pnpm": ">=8"
  },
  "dependencies": {
    "zustand": "^5.0.6"
  }
}
