# NPM Configuration for @mfe-toolkit packages

# Ensure we're using the npm registry
registry=https://registry.npmjs.org/

# Always publish with public access for scoped packages
access=public

# Existing settings
auto-install-peers=true
strict-peer-dependencies=false

# Use exact versions in package.json
save-exact=true

# Ensure proper permissions
unsafe-perm=true

# Set npm loglevel
loglevel=warn