{
  "name": "@mfe/react17-mfe",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --port 3002",
    "build": "tsc && node esbuild.config.js",
    "preview": "vite preview",
    "serve:static": "npx http-server dist -p 8081 --cors -c-1",
    "serve": "npx http-server dist -p 3002 --cors -c-1 -o",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "dependencies": {
    "@mfe/dev-kit": "workspace:*",
    "@mfe/shared": "workspace:*",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^17.0.80",
    "@types/react-dom": "^17.0.25",
    "@vitejs/plugin-react": "^4.3.1",
    "esbuild": "^0.20.2",
    "happy-dom": "^14.7.1",
    "vite": "^7.0.0",
    "vitest": "^3.0.1"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "react-redux": "^9.1.0"
  }
}
