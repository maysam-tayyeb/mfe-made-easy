{
  "$schema": "https://mfe-made-easy.com/schemas/mfe-manifest-v2.schema.json",
  "name": "mfe-notification-react17",
  "version": "1.0.0",
  "displayName": "React 17 Notification Demo",
  "description": "Notification service demonstration MFE built with React 17",
  "url": "http://localhost:8080/service-demos/notifications/mfe-notification-react17/mfe-notification-react17.js",
  "dependencies": {
    "runtime": {
      "react": "^17.0.2 || ^18.0.0 || ^19.0.0",
      "react-dom": "^17.0.2 || ^18.0.0 || ^19.0.0"
    },
    "peer": {
      "@mfe-toolkit/core": "^0.1.0"
    }
  },
  "compatibility": {
    "container": "^1.0.0",
    "browsers": {
      "chrome": ">=90",
      "firefox": ">=88",
      "safari": ">=14",
      "edge": ">=90"
    },
    "frameworks": {
      "react": "^17.0.2 || ^18.0.0 || ^19.0.0"
    }
  },
  "capabilities": {
    "emits": ["notification:test"],
    "listens": [],
    "features": ["notification-testing", "react17-hooks", "custom-notifications"]
  },
  "requirements": {
    "services": [
      { "name": "notification", "optional": false },
      { "name": "logger", "optional": true }
    ]
  },
  "metadata": {
    "displayName": "React 17 Notification Demo",
    "description": "Notification service demonstration MFE built with React 17",
    "icon": "⚛️",
    "author": { "name": "MFE Toolkit Team" },
    "category": "service-demos",
    "tags": ["notification", "demo", "react17", "service", "legacy"]
  },
  "config": {
    "loading": {
      "timeout": 30000,
      "retries": 3,
      "retryDelay": 1000,
      "priority": 5,
      "preload": false,
      "lazy": true
    },
    "runtime": {
      "isolation": "none",
      "keepAlive": false,
      "singleton": true
    },
    "communication": {
      "eventNamespace": "notification-demo"
    }
  }
}