{
  "name": "@mfe-toolkit/shared",
  "version": "0.1.0",
  "description": "Shared utilities and constants for MFE Toolkit",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\""
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maysam-tayyeb/mfe-toolkit.git",
    "directory": "packages/shared"
  },
  "bugs": {
    "url": "https://github.com/maysam-tayyeb/mfe-toolkit/issues"
  },
  "homepage": "https://github.com/maysam-tayyeb/mfe-toolkit/tree/main/packages/shared#readme",
  "keywords": [
    "mfe",
    "microfrontend",
    "toolkit"
  ],
  "author": "Maysam Tayyeb <maysam@example.com>",
  "license": "MIT"
}
