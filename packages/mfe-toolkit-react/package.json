{
  "name": "@mfe-toolkit/react",
  "version": "0.1.0",
  "description": "React components and hooks for MFE Toolkit",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "node build.cjs",
    "dev": "tsc -w",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\""
  },
  "dependencies": {
    "@mfe-toolkit/core": "workspace:*",
    "zustand": "^5.0.6"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-router-dom": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "react-router-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.0.0 || ^19.0.0",
    "@types/react-dom": "^18.0.0 || ^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.21.3",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mfe",
    "microfrontend",
    "react",
    "components",
    "hooks",
    "toolkit"
  ],
  "author": "Maysam Tayyeb <maysam@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maysam-tayyeb/mfe-toolkit.git",
    "directory": "packages/mfe-toolkit-react"
  },
  "bugs": {
    "url": "https://github.com/maysam-tayyeb/mfe-toolkit/issues"
  },
  "homepage": "https://github.com/maysam-tayyeb/mfe-toolkit/tree/main/packages/mfe-toolkit-react#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}