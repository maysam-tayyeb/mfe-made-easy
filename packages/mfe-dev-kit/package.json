{
  "name": "@mfe-toolkit/core",
  "version": "0.1.0",
  "description": "A comprehensive toolkit for building and managing microfrontends with TypeScript and React",
  "keywords": [
    "microfrontend",
    "mfe",
    "micro-frontend",
    "toolkit",
    "react",
    "typescript",
    "module-federation",
    "frontend-architecture"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mfe-made-easy.git",
    "directory": "packages/mfe-dev-kit"
  },
  "bugs": {
    "url": "https://github.com/yourusername/mfe-made-easy/issues"
  },
  "homepage": "https://github.com/yourusername/mfe-made-easy/tree/main/packages/mfe-dev-kit#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "mfe-manifest": "./dist/cli/manifest-generator.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\""
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
