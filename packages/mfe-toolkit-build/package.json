{
  "name": "@mfe-toolkit/build",
  "version": "0.1.0",
  "description": "Build utilities for MFE development - Node.js only",
  "keywords": [
    "microfrontend",
    "mfe",
    "build",
    "bundler",
    "esbuild",
    "typescript"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/maysam-tayyeb/mfe-toolkit.git",
    "directory": "packages/mfe-toolkit-build"
  },
  "bugs": {
    "url": "https://github.com/maysam-tayyeb/mfe-toolkit/issues"
  },
  "homepage": "https://github.com/maysam-tayyeb/mfe-toolkit/tree/main/packages/mfe-toolkit-build#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix"
  },
  "dependencies": {
    "esbuild": "^0.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
